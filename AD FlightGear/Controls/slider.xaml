<UserControl x:Class="AD_FlightGear.Controls.slider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AD_FlightGear.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas>
        <Slider HorizontalAlignment="Left" Value="{Binding VM_Time}" VerticalAlignment="Top" Height="53" Width="725" ValueChanged="f" Canvas.Left="28" Canvas.Top="205"
                Maximum="{Binding VM_Length}"/>

    </Canvas>
</UserControl>
