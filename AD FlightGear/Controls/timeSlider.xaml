<UserControl x:Class="AD_FlightGear.Controls.timeSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AD_FlightGear.Controls"
             mc:Ignorable="d" Height="206" Width="840">
    <Grid Margin="10,0,0,173" Height="31" VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="93*"/>
            <ColumnDefinition Width="322*"/>
        </Grid.ColumnDefinitions>

        <Slider x:Name="tSlider" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Height="24" Width="700" Margin="10,0,0,7" Value="{Binding VM_Time}"
                Maximum="{Binding VM_Length}" ValueChanged="changeValue" 
                Background="#FF887D9E" Foreground="{x:Null}" BorderBrush="{x:Null}" Grid.ColumnSpan="2"/>
    </Grid>
</UserControl>
