<UserControl x:Class="AD_FlightGear.Controls.timeSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AD_FlightGear.Controls"
             mc:Ignorable="d" Height="34" Width="726">
    <Canvas>

        <Slider x:Name="tSlider" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Height="24" Width="700" Margin="10,0,0,7" Value="{Binding VM_Time}"
                Maximum="{Binding VM_Length}" ValueChanged="changeValue" Minimum="0"
                Background="#FF887D9E" Foreground="{x:Null}" BorderBrush="{x:Null}" Grid.ColumnSpan="2"/>
    </Canvas>
</UserControl>
