<UserControl x:Class="AD_FlightGear.Controls.Clock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AD_FlightGear.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="200">
    <Canvas Margin="0,0,-2,0">
        <TextBlock x:Name="timePass" HorizontalAlignment="Left" 
                   TextWrapping="Wrap" Text="{Binding VM_TimePassed}" 
                   VerticalAlignment="Center" Height="30" Width="100" 
                   RenderTransformOrigin="0.5,0.5"
                   TextAlignment="Center" FontSize="16" Background="#FFA0A5AE">
        </TextBlock>
        <TextBlock x:Name="timeLeft" HorizontalAlignment="Right" 
                   TextWrapping="Wrap" Text="{Binding VM_TimeLeft}" 
                   VerticalAlignment="Center" Height="30" Width="100" 
                   RenderTransformOrigin="0.5,0.5"
                   TextAlignment="Center" FontSize="16" Background="#FFA0A5AE" Canvas.Left="101"/>
    </Canvas>
</UserControl>
