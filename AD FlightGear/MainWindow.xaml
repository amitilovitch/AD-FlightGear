<Window x:Class="AD_FlightGear.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="clr-namespace:AD_FlightGear.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="237*"/>
            <RowDefinition Height="334*"/>
        </Grid.RowDefinitions>
        <Controls:dataGraph  x:Name="dataGraph_V"  Grid.RowSpan="2" Loaded="dataGraphV_Loaded"/>

        <Controls:FlightData x:Name="FlightData" Margin="522,0,0.333,11.667"/>
        

        <Controls:twoSliders x:Name="sliders2" Margin="509,209,10,131" Grid.RowSpan="2" Loaded="sliders2_Loaded"/>
        <Controls:speed x:Name="speed" Margin="477,213,251,47" RenderTransformOrigin="0.471,-0.865" Grid.Row="1"/>
        <Controls:joystick x:Name="joystick" Margin="566,231,64,134" Grid.RowSpan="2"/>
        <Controls:playStopButtons x:Name="playStopButtons" Margin="362,217,344,71" RenderTransformOrigin="0.397,-3.019" Grid.Row="1"/>
        <Controls:timeSlider x:Name="timeSliders" Margin="43,284,30,10" Grid.Row="1"/>
        <Controls:Clock x:Name="clock" Margin="556,211,37,52" Grid.Row="1"/>

    </Grid>
</Window>
